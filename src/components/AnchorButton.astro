---
export interface Props {
  text: string;
  href: string;
  class?: string;
}

const { text, href, class: className } = Astro.props as Props;
---

<a href={href} target="_blank" class={className}>{text}</a>

<style>
  a {
    position: relative;
    display: inline-block;
    padding: 0.5rem 2rem;
    border: 2px solid #199400;
    font-size: 1.5rem;
    overflow: hidden;
    cursor: pointer;
  }

  a::before {
    content: "";
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: #199400;
    scale: 1 0;
    z-index: -1;
    transform-origin: center;
    transition: scale 0.2s ease-in-out;
  }
  a:focus::before,
  a:hover::before {
    scale: 1 1;
  }
</style>
